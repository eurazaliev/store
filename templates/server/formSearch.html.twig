{# src/templates/server/form.html.twig #}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

<div class="col-md-12">
    <div class="form-group row">
    <div class="form-group">
            {{ form_row(form.name) }}
    </div>
    </div>
    <a  data-toggle="collapse" href="#linkcollapse" aria-expanded="failse" aria-controls="Collapse">
    Расширенный поиск
    </a>
    {#class="btn btn-primary"#}
    <p>
    <div class="collapse" id="linkcollapse">
    <div class="card card-block">
    
    <div class="form-group row">
    <div class="form-group">
            {{ form_row(form.isVm) }}
    </div>
    </div>

    <div class="input-group">
        {{ form_widget (form.memMin, {'attr': {'class': 'form-control', 'placeholder': 'RAM>' }} ) }}
        <span class="input-group-addon">-</span>
        {{ form_widget (form.memMax, {'attr': {'class': 'form-control', 'placeholder': '<RAM' }} ) }}
    </div>

    <div class="input-group">
        {{ form_widget (form.cpuMin, {'attr': {'class': 'form-control', 'placeholder': 'CORES>' }} ) }}
        <span class="input-group-addon">-</span>
        {{ form_widget (form.cpuMax, {'attr': {'class': 'form-control', 'placeholder': '<CORES' }} ) }}
    </div>

    <div class="input-group">
        {{ form_widget (form.hddMin, {'attr': {'class': 'form-control', 'placeholder': 'HDD>' }} ) }}
        <span class="input-group-addon">-</span>
        {{ form_widget (form.hddMax, {'attr': {'class': 'form-control', 'placeholder': '<HDD' }} ) }}
    </div>


    <div class="form-group row">
    <div class="form-group">
            {{ form_row(form.ipAddr) }}
    </div>
    </div>
    <div class="form-group row">
    <div class="form-group">
            {{ form_row(form.onOff) }}
    </div>
    </div>

    <div class="form-group row">
    <div class="form-group">
            {{ form_row(form.clusterId) }}
    </div>
    </div>

    <div class="form-group row">
    <div class="form-group">
            {{ form_row(form.osId) }}
    </div>
    </div>

    <div class="form-group row">
    <div class="form-group">
            {{ form_row(form.memo) }}
    </div>
    </div>
    </div>
    </div>
    </div>


    <div class="form-row justify-content-center">
    <div class="form-group text-center">
        <input type="submit" value="Search">
    </div>
    </div>
</div>
