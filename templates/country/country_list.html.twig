{# templates/Country/country_index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Страны{% endblock %}
{% block body %}
<div class="blog-header">
    <h2 class="blog-title text-center">Справочник стран</h2>
</div>

<div>
{% for label, messages in app.flashes %}
    {% for message in messages %}
{#	<div class="alert alert-warning" role="alert"> #}
        <div class="alert alert-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
</div>

<table class="table table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">id</th>
      <th scope="col">Name</th>
      <th scope="col">Sanctions</th>
      <th scope="col">Memo</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>

{% for country in countries %}
    <tr>
      <th scope="row">{{ country.id }}</th>
      <td><a href="{{ url('country_edit',{'id': country.id}) }}" class="db-list-edit"> {{ country.name }}</a></td>
      <td>{{ country.sactions }}</td>
      <td>{{ country.memo }}</td>
      <td><a href="{{ url('country_delete',{'id': country.id}) }}" class="db-list-edit" onclick="return confirm(' {{ country.name }} будет удалено, продолжить?')">Удалить {{ country.name }}</a></td>
    </tr>

{% else %}
Записей нет.
{% endfor %}
  <tbody>
  </tbody>
</table>
<h3 class="text-center">Добавить страну</h3>
{{ render(controller('App\\Controller\\CountryController::newAction')) }} 
{% endblock %}
